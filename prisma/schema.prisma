generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model data {
  id           Int      @id @default(0)
  total_cases  Int
  total_deaths Int
  new_cases    Int
  new_deaths   Int
  id_location  Int
  date_value   DateTime @db.Date
  pandemic     String?  @db.VarChar(255)
  location     location @relation(fields: [id_location], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_data_location")

  @@index([id_location], map: "id_location")
}

model location {
  id         Int          @id @default(autoincrement())
  country    String       @unique(map: "country") @db.VarChar(255)
  continent  String?      @db.VarChar(255)
  latitude   Decimal?     @db.Decimal(15, 6)
  longitude  Decimal?     @db.Decimal(15, 6)
  data       data[]
  prediction prediction[]
}

model prediction {
  id           Int      @id @default(0)
  total_cases  Int
  total_deaths Int
  new_cases    Int
  new_deaths   Int
  id_location  Int
  date_value   DateTime @db.Date
  pandemic     String?  @db.VarChar(255)
  location     location @relation(fields: [id_location], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_prediction_location")

  @@index([id_location], map: "id_location")
}
